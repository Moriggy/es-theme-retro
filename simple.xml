<!--
theme name:		MasOS Theme
version:		1.0
author:			My Arcade Spain: Moriggy & Mabedeep
-->

<theme>

	<formatVersion>4</formatVersion>

	<view name="system">
		
		<!-- Imagen de fondo estatica -->
		
		<image name="background" extra="true">
		
			<path>./art/fondo.jpg</path>
			<size>1 1</size>
			<pos>0.50 0.5</pos>
			<origin>0.5 0.5</origin>
			
		</image>
		
		<!-- Modo de vista de los sistemas - modo Hypersipin -->
		
		<carousel name="systemcarousel">
		
			<type>vertical_wheel</type>
			<pos>0 0</pos>
			<size>1 1</size>
			<origin>0 0</origin>
			<color>FFFFFF00</color>
			<logoScale>1.5</logoScale>
			<logoSize>0.15 0.10</logoSize>
			<logoRotation>-9.0</logoRotation>
			<logoRotationOrigin>4 0.5</logoRotationOrigin>
			<logoAlignment>right</logoAlignment>
			<maxLogoCount>9</maxLogoCount>
			<zIndex>75</zIndex>
		
		</carousel>
		
		<!-- Numero de juegos del sistema -->
		
		<text name="systemInfo">
		
			<pos>0 0.555</pos>
			<size>0.980 0.050</size>
			<color>FFFFFF</color>
			<fontPath>./art/Retro_Maximus.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<alignment>right</alignment>
			<zIndex>70</zIndex>
			
		</text>
		
		<!-- Texto info sistema -->
		
		<helpsystem name="help">
		
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./art/Retro_Maximus.ttf</fontPath>
			<fontSize>0.025</fontSize>
			
		</helpsystem>
		
	</view>
		
	<view name="basic, detailed, video, grid">
	
		<!-- Fondo gamelist -->
		
		<image name="backgroundfilter" extra="true">
		
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
			<path>./art/gamelist.png</path>
			<zIndex>70</zIndex>
			
		</image>
		
		<!-- Texto del sistema -->

		<helpsystem name="help">
		
			<textColor>ffffff</textColor>
			<iconColor>ffffff</iconColor>
			<fontPath>./art/Retro_Maximus.ttf</fontPath>
			<fontSize>0.025</fontSize>
			
		</helpsystem>
		
		<!-- Posicion de listado de juegos -->
		
		<textlist name="gamelist">
		
			<selectorColor>719CC6</selectorColor>
			<selectedColor>ffffff</selectedColor>
			<primaryColor>dee0e8</primaryColor>
			<secondaryColor>eac428</secondaryColor>
			<alignment>left</alignment>
			<fontPath>./art/Retro_Maximus.ttf</fontPath>	
			<forceUppercase>1</forceUppercase>
			<pos>0.655 0.18</pos>
			<size>0.34 0.65</size>
			<fontSize>0.03</fontSize>
			<lineSpacing>1.475</lineSpacing>
			<horizontalMargin>0.05</horizontalMargin>
			<scrollSound>./art/scroll.wav</scrollSound>
			<zIndex>77</zIndex>
			
		</textlist>
		
		<!-- Posicion y tamaño imagen juego -->

		<image name="md_image">
		
			<maxSize>0.35 0.46</maxSize>
			<pos>0.248 0.445</pos>
			<zIndex>77</zIndex>
			
		</image>

	<!-- Posicion y tamaño del video juego -->

		<video name="md_video">
		
			<maxSize>0.31 0.43</maxSize>
			<pos>0.248 0.43</pos>
			<delay>1.5</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
			<zIndex>77</zIndex>
			
		</video>

		<!-- Metadatos -->
		
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
		
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/Retro_Maximus.ttf</fontPath>
			<fontSize>0.015</fontSize>
			<size>0.12 0.04</size>
			<zIndex>80</zIndex>
			
		</text>
				
		<text name="md_rating, md_developer, md_publisher, md_genre, md_players, md_playcount, md_favorite ,md_releasedate, md_lastplayed">
		
			<color>ffffff</color>
			<forceUppercase>1</forceUppercase>
			<fontPath>./art/Retro_Maximus.ttf</fontPath>
			<fontSize>0.025</fontSize>
			<size>0.14 0.04</size>
			<zIndex>80</zIndex>
			
		</text>

		<!-- Descripcion juego -->
		
		<text name="md_description">
		
			<pos>0.030 0.800</pos>
			<size>0.460 0.10</size>
			<color>00d2f3</color>
			<fontPath>./art/Retro_Maximus.ttf</fontPath>
			<fontSize>0.02</fontSize>
			<forceUppercase>1</forceUppercase>
			<zIndex>80</zIndex>
			
		</text>
		
		<text name="md_lbl_rating">
			<pos>0.495 0.18</pos>
		</text>

		<rating name="md_rating">
			<pos>0.495 0.21</pos>
			<size>0.028 0.028</size>
			<filledPath>./art/rating_empty.svg</filledPath>
			<unfilledPath>./art/rating_filled.svg</unfilledPath>
		</rating>
		
		<text name="md_lbl_players">
			<pos>0.495 0.24</pos>
		</text>
		
		<text name="md_players">
			<pos>0.495 0.27</pos>
		</text>
			
		<text name="md_lbl_genre">
			<pos>0.495 0.29</pos>
		</text>
		
		<text name="md_genre">
			<pos>0.495 0.32</pos>
		</text>
			
		<text name="md_lbl_releasedate">
			<pos>0.495 0.35</pos>
		</text>
		
		<datetime name="md_releasedate">
			<pos>0.495 0.38</pos>
			<zIndex>80</zIndex>
		</datetime>
			
		<text name="md_lbl_developer">
			<pos>1 1</pos>
		</text>
		
		<text name="md_developer">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_publisher">
			<pos>1 1</pos>
		</text>
		
		<text name="md_publisher">
			<pos>1 1</pos>
		</text>
			
		<text name="md_lbl_lastplayed">
			<pos>1 1</pos>
		</text>
		
		<datetime name="md_lastplayed">
			<pos>1 1</pos>
		</datetime>
			
		<text name="md_lbl_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_playcount">
			<pos>1 1</pos>
		</text>
		
		<text name="md_lbl_favorite">
			<pos>1 1</pos>
		</text>
		
		<text name="md_favorite">
			<pos>1 1</pos>
		</text>
		
	</view>
	
</theme>
